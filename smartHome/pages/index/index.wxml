<!--index.wxml-->
<view class="main_box">
  <!-- 轮播图 -->
  <view class="swiper_box">
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="500">
      <block wx:for="{{ background }}" wx:key="*this">
        <swiper-item>
          <image src="{{ item }}"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 170px;" bindtap="toAdd">
        <image class="icon-img" src="../../img/nav.png" ></image>
        新设备接入
      </button>
    </view>
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 170px;" bindtap="toDevice">
        <image class="icon-img" src="../../img/classify_1.png" ></image>
        设备查看
      </button>
    </view>
  </view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 170px;" bindtap="toControl">
        <image class="icon-img" style="width:22px;height:22px;" src="../../img/messageLogo.png" ></image>
        设备控制
      </button>
    </view>
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 170px;" bindtap="toMonitor">
        <image class="icon-img" src="../../img/messageLogo3.png"  style="width:22px;height:22px;"></image>
        环境监测
      </button>
    </view>
  </view>
</view>